<h1>Login to your account</h1>

<div>
	<%= form_for(:logon, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p> <%= link_to "Forgot password", forgot_path %></p>
</div>