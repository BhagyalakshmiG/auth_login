<h1>Create new account</h1>

<div>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :confirm_password %>
    <%= f.password_field :confirm_password %>

    <%= f.submit :signup %>
  <% end %>
</div>

